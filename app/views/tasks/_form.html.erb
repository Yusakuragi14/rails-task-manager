<%= form_with model: @task do |f| %>
  <div class="form-group">
    <%= f.label :Title %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :Details %>
    <%= f.text_field :details %>
  </div>
  <div>
    <%= f.submit %>
  </div>

<% end %>
<%= link_to "Back to the list", tasks_path %>
